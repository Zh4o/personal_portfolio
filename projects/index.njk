---
layout: base.njk
title: Projects
---

<div class="post-container">
    <h1>Projects</h1>

    <div class="project-list">
        {%- for project in projects -%}
            <div class="project-item">
                {# The always-visible summary bar #}
                <div class="project-summary">
                    <div class="project-title-group">
                        <img src="{{ project.icon }}" alt="{{ project.name }} icon" class="project-icon">
                        <h2>{{ project.name }}</h2>
                    </div>
                    <a href="{{ project.url }}" class="project-visit-btn" target="_blank" rel="noopener noreferrer">Visit Website</a>
                </div>

                {# The hidden accordion details #}
                <div class="project-details">
                    <p>{{ project.description }}</p>
                    <strong>Technologies used:</strong>
                    <ul class="tech-list">
                        {%- for tech in project.technologies -%}
                            <li>{{ tech }}</li>
                        {%- endfor -%}
                    </ul>
                </div>
            </div>
        {%- endfor -%}
    </div>
</div>