---
layout: base.njk
title: Blog
---

<div class="post-container">
    <h1>Blog</h1>

    <ul class="blog-list">
    {%- for post in collections.post | reverse -%}
        <li class="blog-post-item">
            <h2>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <p class="post-meta">{{ post.date | dateString }}</p>
        </li>
    {%- endfor -%}
    </ul>
</div>